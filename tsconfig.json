{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "newLine": "lf",
    "noImplicitAny": false,
    "noImplicitThis": false
    // "allowJs": true,
    // "checkJs": true
    // "diagnostics": true,
  },
  "exclude": ["node_modules", "dist"]
}
